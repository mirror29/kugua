.container {
  margin-bottom: 110rpx;
}
.search-tit {
  position: relative;
}
.search-tit .tit-bg {
    width: 100%;
    height: 350rpx;
    z-index: 0;
}
.search-tit .tit-con {
    position: absolute;
    z-index: 10;
    width: 90%;
    bottom: 20rpx;
    left: 32rpx;
}
.search-tit .tit-con label {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
}
.search-tit .tit-con label input {
        border-radius: 40rpx 0 0 40rpx;
        background-color: #ffffff;
        width: 510rpx;
        padding: 20rpx;
        height: 90rpx;
        font-size: 26rpx;
}
.search-tit .tit-con label text {
        border-radius: 0 40rpx 40rpx 0;
        width: 180rpx;
        margin: 0;
        height: 90rpx;
        line-height: 90rpx;
        color: #fff;
        background: -webkit-gradient(linear, left top, right top, from(#ff9801), to(#ff570a));
        background: -o-linear-gradient(left, #ff9801, #ff570a);
        background: linear-gradient(to right, #ff9801, #ff570a);
        border-top-left-radius: none;
        border-bottom-left-radius: none;
        text-align: center;
        font-size: 36rpx;
        letter-spacing: 1.5px;
}
.search-hot {
  background-color: #ffffff;
  padding: 10rpx 20rpx;
  margin-bottom: 2rpx;
}
.search-hot .hot-con {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    margin-top: 20rpx;
